<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mDENUMIRE_cl_prodmold_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/mMaterialLetterIcon_cl_prodmold"
            android:padding="5dp"
            android:text="Denumirea codului"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#009968" />

        <TextView
            android:id="@+id/mCODUL_cl_prodmold_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mDENUMIRE_cl_prodmold_Txt"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/mMaterialLetterIcon_cl_prodmold"
            android:maxLines="3"
            android:text="Codul prodmold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mUM_cl_prodmold_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCODUL_cl_prodmold_Txt"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/mMaterialLetterIcon_cl_prodmold"
            android:maxLines="3"
            android:text="Unitatea de măsură"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic" />



        <TextView
            android:id="@+id/mNOTICE_cspm_Txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mCODUL_cl_prodmold_Txt"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"

            android:maxLines="3"
            android:text="Pentru vizualizarea informatiei complete despre AE, accesati profilul. Click pe profil."
            android:textAppearance="?android:attr/textAppearanceSmall"


            android:textStyle="bold"
            android:textColor="@color/darkGreen"

            />

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/mMaterialLetterIcon_cl_prodmold"
            android:layout_width="@dimen/list_item_avatar_size"
            android:layout_height="@dimen/list_item_avatar_size"
            android:layout_marginTop="28dp"
            android:layout_marginRight="8dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>